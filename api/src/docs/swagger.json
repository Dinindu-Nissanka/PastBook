  "definitions": {
    "PhotoGridDetails": {
      "type": "object",
      "properties": {
        "grid": {
          "type": "array",
          "items": {
            "properties": {
              "id": {
                "type": "string"
              },
              "order": {
                "type": "number"
              }
            }
          }
        }
      }
    },
    "UserLoginRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "required": true,
          "example": "member@member.com"
        },
        "password": {
          "type": "string",
          "required": true,
          "example": "Member@123"
        }
      }
    },
    "UserLoginResponse": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      }
    },
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "example": "error"
        },
        "message": {
          "type": "string"
        },
        "error": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "UploadedImages": {
      "type": "array",
      "items": {
        "properties": {
          "id": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "picture": {
            "type": "string"
          },
          "pictureSmall": {
            "type": "string"
          },
          "pictureMedium": {
            "type": "string"
          },
          "pictureStored": {
            "type": "string"
          },
          "timestamp": {
            "type": "string"
          }
        }
      }
    }
  }
}
