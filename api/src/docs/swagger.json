      "get": {
        "tags": ["User"],
        "summary": "Get uploaded images list of an user",
        "description": "Get uploaded images list of an user",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/UploadedImages"
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
